<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_cl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        app:bl_solid_color="#eeeeee">

        <Space
            android:id="@+id/txt_spacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent" />

        <TextView
            android:id="@+id/red_dot_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="99+"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            app:bl_corners_radius="10dp"
            app:bl_solid_color="#FF0000"
            app:layout_constraintEnd_toEndOf="@+id/txt_spacer"
            app:layout_constraintTop_toTopOf="@+id/txt_spacer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>